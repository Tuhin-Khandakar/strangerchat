# --- SERVER CONFIGURATION ---
PORT=3000
# Set to 'production' in your live environment
NODE_ENV=development
# Your public-facing URL (no trailing slash)
BASE_URL=https://strngr.chat

# --- SECURITY ---
# Highly recommended: minimum 32 random characters for production
# Used for session signing and CSRF protection
SESSION_SECRET=your-super-long-random-session-secret-here

# Admin panel access password
# In production, this MUST be at least 12 characters and not 'password123'
ADMIN_PASSWORD=change-me-to-something-secure

# Set to 'true' if running behind a proxy (Nginx, Cloudflare, Heroku, etc.)
# This ensures rate limiting and logs use the correct client IP
TRUST_PROXY=false

# Comma-separated list of allowed origins for Socket.IO (e.g. https://strngr.chat)
# In production, set this to your domain for better security. Default allows all.
ALLOWED_ORIGINS=*

# Comma-separated list of allowed IP addresses for admin panel access (e.g. 127.0.0.1, 8.8.8.8)
# If empty, IP restriction is disabled.
ADMIN_ALLOWED_IPS=127.0.0.1,::1

# --- DATABASE ---
# SQLite database filename (stored in src/db/)
DB_NAME=moderation.db

# --- FEATURES ---
# Geo-blocking: List of ISO country codes to block, e.g. ["CN", "RU"]
HIGH_RISK_COUNTRIES=[]

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_REASON="System maintenance in progress. We'll be back shortly."

# VAPID keys for Push Notifications (Generate with 'npx web-push generate-vapid-keys')
# Required for service worker push notifications to work
VAPID_PUBLIC_KEY=your_public_key_here
VAPID_PRIVATE_KEY=your_private_key_here
MAILTO_ADDRESS=mailto:admin@yourdomain.com

# Perspective API Key (Optional) - for automated toxicity detection
# Get one at https://www.perspectiveapi.com/
PERSPECTIVE_API_KEY=

# --- LOGGING & MONITORING ---
# Levels: error, warn, info, debug
LOG_LEVEL=info
# Enable detailed debug logging (only for development)
DEBUG=false
