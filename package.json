{
  "name": "strngr",
  "version": "1.0.0",
  "description": "STRNGR â€” Talk. Anonymously.",
  "type": "module",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "concurrently \"vite\" \"nodemon src/server.js\"",
    "build": "vite build",
    "preview": "vite preview",
    "size": "size-limit",
    "test": "cross-env NODE_ENV=test node --experimental-vm-modules node_modules/jest/bin/jest.js --runInBand",
    "test:coverage": "cross-env NODE_ENV=test node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage --runInBand",
    "test:critical": "cross-env NODE_ENV=test node --experimental-vm-modules node_modules/jest/bin/jest.js src/__tests__/critical-journeys.test.js --runInBand",
    "test:e2e": "playwright test src/__tests__/e2e-critical-journeys.spec.js",
    "test:e2e:headed": "playwright test src/__tests__/e2e-critical-journeys.spec.js --headed",
    "test:e2e:debug": "playwright test src/__tests__/e2e-critical-journeys.spec.js --debug",
    "test:manual": "node scripts/test-critical-journeys.js",
    "test:load": "node scripts/load-test.js",
    "test:all": "npm run test && npm run test:critical && npm run test:e2e",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "config:check": "node scripts/validate-config.js",
    "predeploy": "npm run config:check && npm run lint && npm run test:all && npm run build"
  },
  "dependencies": {
    "basic-auth": "^2.0.1",
    "better-sqlite3": "^11.0.0",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^8.2.1",
    "express-session": "^1.18.2",
    "geoip-lite": "^1.4.10",
    "helmet": "^8.1.0",
    "lru-cache": "^11.2.4",
    "node-cron": "^4.2.1",
    "prom-client": "^15.1.3",
    "socket.io": "^4.8.1",
    "uuid": "^9.0.1",
    "web-push": "^3.6.7",
    "winston": "^3.19.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^7.0.2",
    "@playwright/test": "^1.57.0",
    "@size-limit/preset-app": "^12.0.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@vitejs/plugin-legacy": "^7.2.1",
    "autoprefixer": "^10.4.23",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "cssnano": "^7.1.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^17.0.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "nodemon": "^3.1.11",
    "postcss": "^8.5.6",
    "prettier": "^3.7.4",
    "rollup-plugin-visualizer": "^6.0.5",
    "sharp": "^0.34.5",
    "size-limit": "^12.0.0",
    "socket.io-client": "^4.8.3",
    "supertest": "^7.2.2",
    "terser": "^5.44.1",
    "vite": "^7.3.1",
    "vite-plugin-compression": "^0.5.1"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {},
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/e2e/"
    ]
  },
  "size-limit": [
    {
      "path": "dist/assets/*.js",
      "limit": "200 kB"
    },
    {
      "path": "dist/assets/*.css",
      "limit": "50 kB"
    }
  ]
}